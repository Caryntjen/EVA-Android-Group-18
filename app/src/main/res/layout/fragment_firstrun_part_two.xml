<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/blackboard_background"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:weightSum="1">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/ivFullHearth"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:adjustViewBounds="true"
                android:contentDescription="@string/challenge.product.image"
                android:scaleType="centerCrop"
                android:src="@drawable/heart7" />

            <TextView
                android:id="@+id/tvFillingHeartExplanation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/ivFullHearth"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="15dp"
                android:gravity="center"
                android:text="@string/firstrun.fillyourheart"
                android:textColor="@android:color/white"
                android:textSize="20sp" />

            <TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/tlFirstRun"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/tvFillingHeartExplanation"
                android:layout_gravity="top"
                android:layout_marginTop="15dp"
                android:visibility="visible">

                <TableRow
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:layout_marginTop="5dp"
                    android:background="@android:color/white"
                    android:gravity="center_vertical"
                    android:minHeight="45dp"
                    android:weightSum="1">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="left"
                        android:paddingLeft="15dp"
                        android:paddingRight="0dp"
                        android:text="@string/firstrun.challenges"
                        android:textColor="@color/evaDarkGreen" />
                </TableRow>

                <TableRow
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:layout_marginTop="5dp"
                    android:background="@android:color/white"
                    android:gravity="center_vertical"
                    android:minHeight="45dp"
                    android:weightSum="1">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="left"
                        android:paddingLeft="15dp"
                        android:paddingRight="0dp"
                        android:text="@string/firstrun.points"
                        android:textColor="@color/evaDarkGreen" />
                </TableRow>

                <TableRow
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:layout_marginTop="5dp"
                    android:background="@android:color/white"
                    android:gravity="center_vertical"
                    android:minHeight="45dp"
                    android:weightSum="1">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="left"
                        android:paddingLeft="15dp"
                        android:paddingRight="0dp"
                        android:text="@string/firstrun.achievements"
                        android:textColor="@color/evaDarkGreen" />
                </TableRow>


            </TableLayout>

        <Button
            android:id="@+id/btnBeginChallenge"
            style="?android:textAppearanceSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center"
            android:layout_below="@+id/tlFirstRun"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="15dp"
            android:text="@string/firstrun.begin"
            android:textColor="@color/evaDarkGreen" />


        </RelativeLayout>


    </ScrollView>
</LinearLayout>